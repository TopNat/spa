{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended", "prettier"],
    "plugins": ["react", "prettier"],
    "parserOptions": {
        "ecmaFeatures": { "jsx": true },
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "endOfLine": "auto"
            }
        ],
        "camelcase": ["error"],
        "eqeqeq": ["error", "always"],
        "react/react-in-jsx-scope": "off",

        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
    }
}
